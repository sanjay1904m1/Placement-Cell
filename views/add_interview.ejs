<link rel="stylesheet" href="/css/bootstrap.min.css">
<% if (locals.user) {%>
  <%- include('header'); %>
  <%- include('styles'); %>
<div class='d-flex flex'>
  <div class="container mt-4 col-md-4">
    <h4>Add a Company </h4>
  
    <form class="row g-3 mt-1 border border-dark rounded p-2" 
     style="--bs-border-opacity: 0.5" action="/interview/create" method="POST">
  
      <div class="col-12">
        <label for="company" class="form-label">Company</label>
        <input
          type="text"
          class="form-control"
          placeholder="Enter company name"
          id="company"
          name="company"
          required
        />
      </div>
  
      <div class="col-12">
        <label for="date" class="form-label">Date of interview</label>
        <input
          type="date"
          class="form-control"
          placeholder="Enter student email"
          id="date"
          name="date"
          required
        />
      </div>
  
          
      <div class="col-12 ">
        <button type="submit" class="btn btn-primary">Add interview</button>
      </div>
  
    </form>
  </div>
  


  <div
    class="d-flex flex-column align-items-center p-2 mx-auto my-2 container-sm border rounded"
    style="
      max-width: 600px;
      min-height: 200px;
      max-height: 600px;
      overflow-y: auto;
    ">
    <h3 class="mt-2">Companies in Queue</h3>
    <div class="accordion accordion-flush" style="width: 90%">
      <% for (interview of all_interviews) {%>
      <div class="accordion-item my-2 border border-1 rounded">
        <h2 class="accordion-header" id="headingOne">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapse<%= interview._id %>"
            aria-expanded="false"
            aria-controls="collapse<%= interview._id %>"
          >
            <span class="fw-semibold font-seigeUi text-uppercase"
              ><%= interview.company %></span
            >
          </button>
        </h2>
        <div
          id="collapse<%= interview._id %>"
          class="accordion-collapse collapse"
          aria-labelledby="headingOne"
          data-bs-parent="#accordionExample"
        >
          <div class="accordion-body d-flex flex-column align-items-center">
            <table class="table">
              <tbody>
                <tr>
                  <th scope="row">Company</th>
                  <td><%= interview.company %></td>
                </tr>
                <tr>
                  <th scope="col">Date of Interview</th>
                  <td><%= interview.date %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <%} %>
    </div>
  </div>






</div>
  
  <%} %>
  